<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/stats_background"
    android:orientation="vertical"
    android:padding="14sp"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/rajdhani_regular"
            android:includeFontPadding="false"
            android:text="Back"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/rajdhani_semibold"
            android:includeFontPadding="false"
            android:text="Stats"
            android:textColor="@color/stats_text_primary"
            android:textSize="28sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/stats_card_background"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="16dp"
            android:layout_marginEnd="5dp"
            android:elevation="50dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/stats_box_background"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High scores"
                    android:fontFamily="@font/rajdhani_semibold"
                    android:layout_gravity="center"
                    android:textSize="22dp"
                    android:textColor="@color/stats_text_primary"
                    android:includeFontPadding="false"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/scores_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/stats_card_background"
            android:layout_marginStart="5dp"
            app:cardCornerRadius="16dp"
            android:layout_marginEnd="5dp"
            android:elevation="50dp"
            android:layout_marginBottom="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/stats_box_background"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Daily Activity"
                    android:fontFamily="@font/rajdhani_semibold"
                    android:layout_gravity="center"
                    android:textSize="22sp"
                    android:textColor="@color/stats_text_primary"
                    android:includeFontPadding="false"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:text="Calendar place holder"
                    android:fontFamily="@font/rajdhani_regular"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:textColor="@color/stats_text_primary"
                    android:includeFontPadding="false"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>