<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.activites.TypingGame">

    <View
        android:id="@+id/type_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/overlay_dimmed"
        android:elevation="100dp"
        android:visibility="visible" />

    <!-- Start screen -->
    <LinearLayout
        android:id="@+id/type_game_start_screen"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/typing_game_small_background"
        android:elevation="100dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/rajdhani_semibold"
            android:includeFontPadding="false"
            android:text="Typing game"
            android:textColor="@color/white"
            android:textSize="26sp" />

        <Button
            android:id="@+id/type_start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/type_background_dark"
            android:fontFamily="@font/rajdhani_regular"
            android:includeFontPadding="false"
            android:text="Start"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>


    <!-- Main game screen -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/typing_game_big_background"
        android:orientation="vertical"
        android:padding="14dp"
        android:visibility="visible">

        <Button
            android:id="@+id/type_game_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/type_background_dark"
            android:fontFamily="@font/rajdhani_regular"
            android:includeFontPadding="false"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/type_game_round"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Round 0"
            android:layout_gravity="center"
            android:fontFamily="@font/rajdhani_semibold"
            android:textSize="26sp"
            android:textColor="@color/white"
            android:includeFontPadding="false"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/type_game_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="@font/rajdhani_regular"
                android:gravity="center"
                android:text="Time: 00:00"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/type_game_wpm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:fontFamily="@font/rajdhani_regular"
                android:gravity="center"
                android:text="WPM: 0"
                android:textColor="@color/white"
                android:textSize="22sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2.5dp"
            android:background="@drawable/typing_game_box_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:background="@drawable/typing_game_box_background">

                <TextView
                    android:id="@+id/type_game_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/rajdhani_regular"
                    android:includeFontPadding="false"
                    android:padding="10dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:layout_marginTop="20dp"
                android:background="@drawable/typing_game_box_background">

                <EditText
                    android:id="@+id/type_game_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rajdhani_regular"
                    android:background="@null"
                    android:gravity="top"
                    android:hint="Start typing here..."
                    android:includeFontPadding="false"
                    android:inputType="textMultiLine|textLongMessage"
                    android:singleLine="false"
                    android:scrollHorizontally="false"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>